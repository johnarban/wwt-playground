{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.vue",
    "src/**/*.json",
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    
    // add so we don't need to use 'type' for type imports
    "verbatimModuleSyntax": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    
    // keep tsconfig from vue-ds-template
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // doesn't work for vue-tsc --build
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    // lib declaration overrides what is set by vue-tsconfig (es2020)
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    
    // recommended by https://www.typescriptlang.org/docs/handbook/modules/guides/choosing-compiler-options.html#im-using-a-bundler
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    
  }
}
